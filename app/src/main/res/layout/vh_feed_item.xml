<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vh_feed_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/vh_feed_item_row_root_padding">

    <ImageView
        android:id="@+id/imgContainer"
        android:layout_width="@dimen/vh_feed_item_img_size"
        android:layout_height="@dimen/vh_feed_item_img_size"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        style="@style/TitleTxtv"
        android:text="Title of item"
        app:layout_constraintStart_toEndOf="@+id/imgContainer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Title of item" />

    <TextView
        android:id="@+id/txtMeta"
        style="@style/MiniMetaTxtv"
        android:text="Metadata of item"
        app:layout_constraintStart_toEndOf="@+id/imgContainer"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"
        tools:text="Metadata of item" />

</androidx.constraintlayout.widget.ConstraintLayout>
